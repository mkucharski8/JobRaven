{
  "name": "jobraven",
  "version": "0.2.0",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "node node_modules/vite/bin/vite.js",
    "build": "tsc -b && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "node -e \"try{require('fs').rmSync('dist-electron',{recursive:true})}catch(e){}\" && vite",
    "electron:dev:fake": "cross-env JOBRAVEN_SERVER_URL=http://localhost:3001 vite",
    "electron:build": "node scripts/write-auth-server-default.js && node scripts/license-utf8-bom.js && node scripts/prepare-icons.js && vite build && node scripts/copy-pdfkit.js && electron-builder",
    "inspect-db": "node scripts/inspect-orders-db.mjs",
    "set-7d-verification": "node scripts/set-last-verified-7-days-ago.mjs",
    "server:install": "cd server && npm install",
    "server": "npm run server:install && cd server && npm run start",
    "help:copy": "node -e \"require('fs').copyFileSync('docs/HELP.md','server/help.md')\"",
    "landing:copy-screenshots": "node scripts/copy-landing-screenshots.js",
    "landing:copy-logo": "node -e \"require('fs').copyFileSync('src/assets/logo-horizontal_transp.png','server/public/landing/logo-horizontal_transp.png')\"",
    "landing:build-help": "cd server && node scripts/build-help-html.js",
    "landing:prepare-static": "npm run landing:copy-logo && npm run landing:copy-screenshots && npm run landing:build-help",
    "landing:copy-static": "node scripts/copy-landing-static.js",
    "landing:deploy-static": "npm run landing:prepare-static && npm run landing:copy-static",
    "deploy:server": "npm run landing:copy-screenshots && npm run landing:copy-logo && cd server && npx railway up",
    "icons:generate": "electron-icon-builder --input=assets/logo-1024.png --output=assets",
    "icons:prepare": "node scripts/prepare-icons.js"
  },
  "dependencies": {
    "electron-updater": "^6.8.3",
    "i18next": "^24.2.0",
    "jsonwebtoken": "^9.0.2",
    "notosans-fontface": "^1.3.0",
    "pdfkit": "^0.17.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.1.1",
    "react-router-dom": "^7.0.1",
    "recharts": "^3.7.0",
    "sql.js": "^1.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-react": "^7.28.5",
    "@types/pdfkit": "^0.17.4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "cross-env": "^10.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "electron-icon-builder": "^2.0.1",
    "png-to-ico": "^3.0.1",
    "typescript": "^5.6.3",
    "vite": "^6.0.1",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.jobraven.app",
    "productName": "JobRaven",
    "icon": "build/icon.ico",
    "directories": {
      "output": "release"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "mkucharski8",
        "repo": "JobRaven"
      }
    ],
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.business"
    },
    "linux": {
      "target": ["AppImage"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "license": "build/license.txt"
    }
  }
}
